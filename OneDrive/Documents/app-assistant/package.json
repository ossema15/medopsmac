{
  "name": "medops",
  "version": "1.0.0",
  "description": "MedOps - Medical Operations Assistant",
  "main": "main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --dev",
    "build": "webpack --config webpack.config.js",
    "watch": "webpack --config webpack.config.js --watch",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild",
    "dist": "npm run build && electron-builder --publish=never",
    "license:issue": "node scripts/issue-license.js",
    "license:keygen": "node scripts/gen-keys.js",
    "license:fingerprint": "node scripts/get-fingerprint.js"
  },
  "keywords": [
    "electron",
    "medical",
    "practice",
    "management",
    "cabneo"
  ],
  "author": "medopsTeam",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@electron/universal": "^1.5.1",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@primno/dpapi": "^2.0.1",
    "argon2": "^0.44.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "framer-motion": "^12.23.6",
    "fuse.js": "^7.1.0",
    "googleapis": "^128.0.0",
    "i18next": "^23.7.11",
    "jspdf": "^3.0.1",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.5.0",
    "react-router-dom": "^6.8.1",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "uuid": "^9.0.1",
    "winreg": "^1.2.5",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "build": {
    "appId": "com.medops.app",
    "productName": "MedOps",
    "artifactName": "MedOps-${version}-${arch}-Setup.${ext}",
    "copyright": "Copyright (c) 2025 Cabneo Team",
    "directories": {
      "output": "dist"
    },
    "npmRebuild": false,
    "extraResources": [
      {
        "from": "Contrat.docx",
        "to": "Contrat.docx"
      }
    ],
    "files": [
      "main.js",
      "app/**/*",
      "main/**/*",
      "node_modules/**/*",
      "assets/medops.ico",
      "ed25519-pub.pem"
    ],
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64", "ia32"] }
      ],
      "icon": "assets/medops.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MedOps",
      "unicode": true,
      "multiLanguageInstaller": true,
      "displayLanguageSelector": true,
      "installerIcon": "assets/medops.ico",
      "uninstallerIcon": "assets/medops.ico",
      "license": "assets/contrat.rtf",
      "include": "build/installer.nsh",
      "installerLanguages": [
        "en_US",
        "ar",
        "es_ES",
        "pt_PT"
      ]
    },
    "mac": {
      "category": "public.app-category.medical",
      "target": ["dmg", "zip"],
      "icon": "assets/medops.icns",
      "identity": null
    },
    "dmg": {
      "artifactName": "MedOps-${version}-${arch}.${ext}",
      "sign": false
    }
  }
}
